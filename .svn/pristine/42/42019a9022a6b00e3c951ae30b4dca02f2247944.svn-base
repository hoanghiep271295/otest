    /**
     * replace all encode text  by html tag
     * @param {string} text - parameter
     * @returns {html tag} html
     */
    replacetextByHtml(text) {
        var html = text.replace(/&lt;/g, "<").replace(/&gt;/g, ">");
        return html;
