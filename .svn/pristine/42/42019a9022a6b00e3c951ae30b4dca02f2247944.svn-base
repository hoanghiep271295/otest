                <div id={id+'_grid'} className="ag-fresh customgridsmall">
                </div>
                    <AgGrid container={id+'_grid'}
                            initAgGrid={this.initAgGrid}
                            loadData={this.loadData}
                            onRowSelect={this.onRowSelect}
                            columnDefs={this.state.columnDefs}
                            headerCheckBox={true}>
                    </AgGrid>
                    </div>
                </div>
            </div>
            );
